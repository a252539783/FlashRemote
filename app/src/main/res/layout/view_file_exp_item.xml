<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/file_exp_item_check"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:id="@+id/file_exp_item_icon"
        android:src="@mipmap/icon_item_file"
        android:padding="5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_exp_normal_name"
        android:id="@+id/file_exp_item_name"
        android:layout_alignTop="@id/file_exp_item_icon"
        android:layout_toEndOf="@id/file_exp_item_icon"
        android:layout_toStartOf="@id/file_exp_item_check"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/secondary_text"
        android:layout_alignStart="@id/file_exp_item_name"
        android:layout_alignBottom="@id/file_exp_item_icon"
        android:textSize="12sp"
        android:id="@+id/file_exp_item_size"
        />
    <View
        android:id="@+id/file_exp_item_divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:layout_toEndOf="@id/file_exp_item_size"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/file_exp_item_size"
        android:layout_alignBottom="@id/file_exp_item_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/file_exp_item_divider"
        android:layout_alignBottom="@id/file_exp_item_size"
        android:text="@string/file_exp_normal_date"
        android:textSize="12sp"
        android:id="@+id/file_exp_item_date"
        />
</RelativeLayout>