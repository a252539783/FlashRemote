<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/file_pc_item_check"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:id="@+id/file_pc_item_icon"
        android:src="@mipmap/icon_item_file"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="fileName"
        android:id="@+id/file_pc_item_name"
        android:layout_alignTop="@id/file_pc_item_icon"
        android:layout_toRightOf="@id/file_pc_item_icon"
        android:layout_toLeftOf="@id/file_pc_item_check"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:maxLines="1"
        />



</RelativeLayout>